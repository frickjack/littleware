 <path id="scaladoc.src">
     <pathelement location="../Auburn/AuLibrary/src/main/scala" />
     <pathelement location="../Auburn/AuLibrary/src/main/java" />
     <pathelement location="../Auburn/Voyager/src/main/scala" />
     <pathelement location="../Auburn/Voyager/src/main/java" />
