    	<artifact name="filter-ccimpl" type="jar"  conf="cc-impl" ext="jar"/>
        -->
    </publications>
    
    <dependencies>        
      <dependency org="littleware" name="littleApps" rev="2.0" conf="compile->compile;server->server;client->client" />
