    <filter-class>org.ebaysf.web.cors.CORSFilter</filter-class>
        <init-param>
            <param-name>cors.allowed.origins</param-name>
            <param-value>http://apps.frickjack.com,http://apps.frickjack.com.s3-website-us-east-1.amazonaws.com</param-value>
        </init-param>            
  </filter>
