      <pathelement location="../Auburn/EtdX/src/main/scala" />
      <pathelement location="../Auburn/Vygr2Vfnd/src/main/scala" />
      <pathelement location="../Auburn/VufindRegression/src/main/scala" />
      <pathelement location="../Auburn/FishProject/Minnows/src/main/scala" />
      <pathelement location="../Auburn/RefStat/src/main/scala" />
      <pathelement location="../Auburn/CircRequest/src/main/scala" />
      <pathelement location="../Auburn/CatRequest/src/main/scala" />
      <pathelement location="../Auburn/CatRequest/src/main/java" />
      <pathelement location="../Auburn/ClickCount/src/main/scala" />
      <pathelement location="../Auburn/ClickCount/src/main/java" />
      <pathelement location="../Auburn/I18n/src/main/scala" />
      <pathelement location="../Auburn/MarcDownload/src" />
      <pathelement location="../ProductBrowser/SwingBrowser/src/main/scala" />
    <!--
    <pathelement path="${java.class.path}/"/>
    <pathelement path="${additional.path}"/>
    -->
  </path>

<target name="scaladoc"
	 depends="resolve"
	 description="generate scaladoc"
         >

    <mkdir dir="api/scaladoc" />
        <property environment="env"/>
        <condition property="scala.home" value="${env.SCALA_HOME}">
            <isset property="env.SCALA_HOME"/>
        </condition>
        <fail unless="scala.home">
                    You must set SCALA_HOME or environment property and append "-J-Dscala.home=scalahomepath"
                    property to the end of "netbeans_default_options" in NetBeansInstallationPath/etc/netbeans.conf to point to
                    Scala installation directory.
                </fail>
        <property name="scala.compiler" value="${scala.home}/lib/scala-compiler.jar"/>
        <property name="scala.library" value="${scala.home}/lib/scala-library.jar"/>
        <property name="scala.lib" value="${scala.home}/lib"/>
        <taskdef resource="scala/tools/ant/antlib.xml">
            <classpath>
                <pathelement location="${scala.compiler}"/>
                <pathelement location="${scala.library}"/>
            </classpath>
        </taskdef>  

    
    <scaladoc
      srcref="scaladoc.src" 
      destdir="api/scaladoc"
      deprecation="yes" unchecked="yes"
      doctitle="Auburn and Littleware Tools"
      classpath="${ivy.compile.classpath}"
       >
       <!--
            <classpath>
                <path path="${ivy.docs.classpath.computed}"/>
            </classpath>
            -->
   <include name="**/*.scala" />
   <include name="**/*.java" />
   <!-- scaladoc freaks out on JPA annotations ... --> 
   <exclude name="**/SimpleEtdStub.scala" />
   <exclude name="**/SimpleProqUpload.scala" />
   
   </scaladoc>
   
 </target>


<!-- for the ivy build rules ... -->
<target name="-init-project" />
<target name="jar" />
<target name="publish" />
    
</project>
