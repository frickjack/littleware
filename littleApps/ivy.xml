      <dependency org="org.eclipse.jetty" name="jetty-security" rev="7.0.1.v20091125" conf="compile,client,standalone->*" />
       <dependency org="org.mortbay.jetty" name="servlet-api" rev="3.0.PFD20090525" conf="standalone,client->*"/>
      
      <dependency org="javanettasks" name="httpunit" rev="1.7" conf="compile,client,standalone->*" />
      <dependency org="javax.jnlp" name="jnlp" rev="6" conf="compile,client,standalone->*" />
