<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>littleware</display-name>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

        <!-- Listeners -->
	<listener>
		<listener-class>
		littleware.web.servlet.LoginHandler
		</listener-class>
	</listener>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>Bootstrap Servlet</servlet-name>
        <servlet-class>littleware.security.auth.server.BootstrapServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    
<servlet>
      <servlet-name>JnlpDownloadServlet</servlet-name>
      <servlet-class>jnlp.sample.servlet.JnlpDownloadServlet</servlet-class>
<!--
      <init-param>
          <param-name>
            logLevel
          </param-name>

          <param-value>
            DEBUG
          </param-value>
        </init-param>

        <init-param>
          <param-name>
            logPath
          </param-name>

          <param-value>
            d:\logs\jnlpdownloadservlet.log
          </param-value>
      </init-param>
   -->
 </servlet>


  <servlet-mapping>
       <servlet-name> Faces Servlet </servlet-name>
       <url-pattern>*.jsf</url-pattern>
  </servlet-mapping>

 <servlet-mapping>
     <servlet-name>JnlpDownloadServlet</servlet-name>
     <url-pattern>*.jnlp</url-pattern>
 </servlet-mapping>
  
  <servlet-mapping>
     <servlet-name>Login Servlet</servlet-name>
     <url-pattern>/login/servlet/*</url-pattern>
 </servlet-mapping>

 <servlet-mapping>
     <servlet-name>Bootstrap Servlet</servlet-name>
     <url-pattern>/bootstrap/*</url-pattern>
 </servlet-mapping>

 <servlet-mapping>
     <servlet-name>Dispatch Servlet</servlet-name>
     <url-pattern>/dispatch/*</url-pattern>
 </servlet-mapping>
 
<filter>
	<filter-name>SecureFilter</filter-name>
	<filter-class>littleware.web.servlet.SecurityFilter</filter-class>
    <init-param>
        <param-name>loginForm</param-name>
        <param-value>home.jsf</param-value>
    </init-param>
</filter>
<filter>
	<filter-name>AdminFilter</filter-name>
	<filter-class>littleware.web.servlet.SecurityFilter</filter-class>
    <init-param>
        <param-name>loginForm</param-name>
        <param-value>home.jsf</param-value>
    </init-param>
    <init-param>
        <param-name>accessControl</param-name>
        <param-value>group:group.littleware.administrator</param-value>
    </init-param>
</filter>

